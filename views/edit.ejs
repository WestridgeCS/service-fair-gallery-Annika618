<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= title %></title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <main class="wrap">
    <a class="link" href="/characters/<%= character._id %>">‚Üê Cancel</a>

    <section class="card">
      <h1>Edit Character</h1>

      <form action="/characters/<%= character._id %>" method="post" class="form">
        <label>Name</label>
        <input name="name" maxlength="40" value="<%= character.name %>" required />

        <label>Type</label>
        <select name="type" required>
          <% types.forEach(t => { %>
            <option value="<%= t %>" <%= character.type === t ? 'selected' : '' %>><%= t %></option>
          <% }) %>
        </select>

        <label>Trait</label>
        <select name="trait" required>
          <% traits.forEach(tr => { %>
            <option value="<%= tr %>" <%= character.trait === tr ? 'selected' : '' %>><%= tr %></option>
          <% }) %>
        </select>

        <button type="submit">Save</button>
      </form>
    </section>
  </main>
</body>
</html>
